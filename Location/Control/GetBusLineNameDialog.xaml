<ContentDialog x:Class="Location.GetBusLineNameDialog"
               xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
               xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
               xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
               xmlns:local="using:Location"
               xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
               Title="Hãy nhập tên tuyến đường"
               Background="#FF00C8F8"
               PrimaryButtonClick="ContentDialog_PrimaryButtonClick"
               PrimaryButtonText="Bắt đầu"
               SecondaryButtonClick="ContentDialog_SecondaryButtonClick"
               SecondaryButtonText="Hủy"
               mc:Ignorable="d">

    <StackPanel HorizontalAlignment="Stretch" VerticalAlignment="Stretch">
        <TextBox x:Name="name"
                 Foreground="#FF0E0D0D"
                 Header="Tên tuyến đường"
                 PlaceholderText="Nhập tên tuyến muốn tạo"
                 SelectionHighlightColor="#FFF2F6FB" />

        <!--  Content body  -->
        <TextBlock x:Name="body"
                   Foreground="#FF0E0D0D"
                   SelectionHighlightColor="#FFEFF4F7"
                   Style="{StaticResource MessageDialogContentStyle}"
                   TextWrapping="Wrap" />
    </StackPanel>
</ContentDialog>
